<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="Orientation">
    <TextView
        android:id="@+id/textViewAdmissionsInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admission Requirements"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/textViewAdmissionsDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details about the admission requirements for the IT Department will be displayed here."
        android:textSize="16sp"
        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/btnApply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply Now"
        android:layout_gravity="center_horizontal"
        android:onClick="onApplyButtonClick" />
</LinearLayout>